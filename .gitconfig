[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = auto
	showbranch = auto
[core]
	pager = less -FRSX
	symlinks = true
	excludesfile = /home/tamas/.gitignore_global
[alias]
	loggraph = log --graph --all --full-history --color --branches --decorate
	l = log --oneline --decorate
	d = diff --word-diff
	s = status -sb
	dc = diff --word-diff --cached
	dl = diff
	dlc = diff --cached
	aa = add .
	ps = push
	pl = pull
	todo = grep --heading --break --ignore-case -e ' FIX: *' -e ' TODO: *'
	newqa = !ruby $HOME/Sites/gittools/tools/gitflow_commands.rb newqa
	cleanup = !ruby $HOME/Sites/gittools/tools/gitflow_commands.rb cleanup
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	assume	 = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed	= "!git ls-files -v | grep ^h | cut -c 3-"
	snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
	ours	 = "!f() { git checkout --ours $@ && git add $@; }; f"
	theirs = "!f() { git checkout --theirs $@ && git add $@; }; f"
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
[push]
	default = tracking
	gpgSign = if-asked
[merge]
	verifySignatures = true
[mergetool]
	keepBackup = true
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[diff]
	algorithm = patience
	compactionHeuristic = true
	renameLimit = 1024
[commit]
	gpgsign = true
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
[rebase]
	autostash = true
	updateRefs = true
[pull]
	rebase = true

[init]
	defaultBranch = master
[branch]
	sort = -committerdate
[column]
	ui = auto
